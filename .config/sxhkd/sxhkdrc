# Description; Take screenshot;
Print
	screenshot.sh

# Description; Show main-menu;
super + m
	rofi-run

# Description; Show power-menu;
alt + m
	rofi-power

# Description; Run kitty;
super + Return
	alacritty

# shift + super + Return
# 	alacritty --title scratchpad

# Description; Restart sxhkd;
super + Insert
  pkill -USR1 -x sxhkd; notify-send "Done"

Shift_L + Alt_L
    setxkbmap -query | grep -q 'se' && setxkbmap us || setxkbmap se,us
Shift_R + Alt_R
    setxkbmap -query | grep -q 'se' && setxkbmap us || setxkbmap se,us
